<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/alarm_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher_round"
        android:tooltipText="PAssist" />

    <TextView
        android:id="@+id/alarm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/alarm_button_confirm_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:visibility="invisible"
        app:slider_icon="@drawable/ic_siren"
        app:slider_icon_color="@color/black"
        app:outer_color="@color/swipeButtonBackground"
        app:text="@string/notification_alert_confirm_button"
        app:text_size="20sp"
        app:area_margin="0dp"/>
    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/alarm_button_confirm_test_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:visibility="invisible"
        app:slider_icon="@drawable/ic_test_alarm"
        app:slider_icon_color="@color/black"
        app:outer_color="@color/swipeButtonBackground"
        app:text="@string/notification_alert_confirm_button"
        app:text_size="20sp"
        app:area_margin="0dp"/>
    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/alarm_button_confirm_no_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:visibility="invisible"
        app:inner_color="@android:color/white"
        app:slider_icon="@drawable/ic_signal_cellular_connected_no_internet_1_bar_black_24dp"
        app:slider_icon_color="@color/black"
        app:outer_color="@color/swipeButtonBackground"
        app:text="@string/notification_alert_confirm_button"
        app:text_color="@android:color/white"
        app:text_size="20sp"
        app:area_margin="0dp"/>

</RelativeLayout>