<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.github.frimtec.android.pikettassist.activity.StateFragement">

  <TextView
      android:id="@+id/main_state"
      android:text="State"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_marginStart="11dp"/>

  <Button
      android:text="Close Alert"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/close_alert_button" android:layout_alignParentEnd="true" android:layout_marginEnd="15dp"/>
</RelativeLayout>