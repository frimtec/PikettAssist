<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_signal_cellular_connected_no_internet_1_bar_black_24dp"
        android:key="supervise_signal_strength"
        android:title="@string/pref_title_supervise_signal_strength" />

    <ListPreference
        android:defaultValue="@string/pref_default_supervise_signal_strength_min_level"
        android:dependency="supervise_signal_strength"
        android:entries="@array/signal_strength"
        android:entryValues="@array/signal_strength_values"
        android:icon="@drawable/ic_signal_cellular_connected_no_internet_0_bar_black_24dp"
        android:key="supervise_signal_strength_min_level"
        android:summary="%s"
        android:title="@string/pref_title_supervise_signal_strength_min_level" />

    <com.github.frimtec.android.pikettassist.ui.preferences.TelephoneSubscriptionPreference
        android:defaultValue="@string/pref_default_supervise_signal_strength_subscription"
        android:dependency="supervise_signal_strength"
        android:icon="@drawable/ic_sim_card_black_24dp"
        android:key="supervise_signal_strength_subscription"
        android:summary="%s"
        android:title="@string/pref_title_supervise_signal_strength_subscription" />
</PreferenceScreen>
