<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_test_alarm"
        android:key="test_alarm_enabled"
        android:title="@string/pref_title_test_alarm_enabled" />

    <EditTextPreference
        android:dependency="test_alarm_enabled"
        android:defaultValue="@string/pref_default_test_alarm_message_pattern"
        android:icon="@drawable/ic_message_black_24dp"
        android:inputType="text"
        android:key="test_alarm_message_pattern"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:singleLineTitle="false"
        android:title="@string/pref_title_test_alarm_message_pattern" />

    <com.github.frimtec.android.pikettassist.ui.preferences.TestContextMultiSelectListPreference
        android:dependency="test_alarm_enabled"
        android:icon="@drawable/ic_toc_black_24dp"
        android:key="supervise_test_contexts"
        android:summary="%s"
        android:title="@string/pref_title_supervise_test_contexts" />

    <com.github.frimtec.android.pikettassist.ui.preferences.TimePreference
        android:dependency="test_alarm_enabled"
        android:defaultValue="@string/pref_default_test_alarm_check_time"
        android:icon="@drawable/ic_watch_later_black_24dp"
        android:key="test_alarm_check_time"
        android:title="@string/pref_title_test_alarm_check_time" />

    <EditTextPreference
        android:dependency="test_alarm_enabled"
        android:defaultValue="@string/pref_default_test_alarm_accept_time_window_minutes"
        android:icon="@drawable/ic_time_window"
        android:inputType="number"
        android:key="test_alarm_accept_time_window_minutes"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_test_alarm_accept_time_window_minutes" />

    <MultiSelectListPreference
        android:dependency="test_alarm_enabled"
        android:defaultValue="@array/default_weekdays"
        android:entries="@array/weekdays"
        android:entryValues="@array/weekdays_values"
        android:icon="@drawable/ic_date_range_black_24dp"
        android:key="test_alarm_check_weekdays"
        android:title="@string/pref_title_test_alarm_check_weekdays" />
</PreferenceScreen>
